        </view>
      </view>
    </view>
  </view>
  <view class='h-50'></view>
  <view class='public_footer'>
    <navigator class='f_nav active' url="/pages/index/index">
      <icon style='background:url(/images/f_index2.png)'></icon> 
      <text>首页</text>
    </navigator>
    <navigator class='f_nav' url="/pages/sort/sort">
      <icon style='background:url(/images/f_sort.png)'></icon>
      <text>分类</text>
    </navigator>
    <navigator class='f_nav' url="/pages/souquan/souquan">
      <icon style='background:url(/images/f_souquan.png)'></icon>
      <text>搜券通</text>
    </navigator>
    <navigator class='f_nav' url="/pages/zhibo/zhibo">
