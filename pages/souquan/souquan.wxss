/**souquan.wxss**/
.souquaninfo {
  font-size: 0.7rem; 
  padding: 1rem 0;
}
.souquaninfo .index-search-group{
  margin: 0 auto;
  width: 80%;
}
.souquaninfo .search{
  width: 82%;
  float: left;
}
.souquaninfo .section-input{
  border: 1px solid #f79fb9;
  border-right: none;
  /* background: #f5f5f5; */
  width: 100%;
  box-sizing: border-box;
  padding: 0px 10px 0px 15px;
  border-top-left-radius: 50px;
  border-bottom-left-radius: 50px;
  line-height: 1.6rem;
  height: 1.6rem;
}
.souquaninfo .section-button{
  float: left;
  border:none;
  background:linear-gradient(to right,#f79fb9,#ff0776);
  color:#fff;
  font-size:0.8rem;
  padding-left:1px;
  width:18%; 
  padding-right:3px;
  line-height: 2;
  border-radius: 0;
  border-top-right-radius: 50px;
  border-bottom-right-radius: 50px;
}
.souquaninfo .section-button-hover{
  opacity: 0.8;
}

.find-quan{
  padding: 15px 15px 0;
  font-size: 0.7rem;
}
.find-quan-hd{
  height: 1.4rem;
  margin-bottom: 0.6rem;
}
.find-quan .find-quan-title{
  display: inline-block;
  color: #999;
  padding: 2px 0;
  line-height: 1.4rem;
}
.find-quan .find-next{
  float: right;
  border: 1px solid #dedede;
  border-radius: 3px;
  padding: 1px 5px;
  line-height: 1.2rem;
  color: #999;
  font-size: 0.65rem;
}
.find-quan .find-next .icon-change{
  display: inline-block;
  width: 16px;
  height: 16px;
  background: url('../../images/wx_icon.png');
  background-position: 0 0;
}
.find-quan .class_label navigator{
  display: inline-block;
  padding: 5px 13px;
  background: #fbe9f2;
  border-radius: 3px;
  text-align: center;
  margin-right: 10px;
  margin-bottom: 10px;
  color: #444;
}
.flex-wrp .flex-item{
  position: relative;
  float: left;
  width: 33.333%;
  text-align: center;
  padding: 5px;
  box-sizing: border-box;
  font-size: 0.65rem;
}
.flex-wrp .flex-item image{
  width: 100%;
  height: 105px;
}
.flex-wrp .flex-item .item-quan{
  position: absolute;
  right: 5px;
  bottom: 1.8rem;
  background:rgba(254,31,128,0.5);
  padding:1px 5px 2px 10px;
  border-top-left-radius: 50px;
  border-bottom-left-radius: 50px;
  color: #fff;
}
.flex-wrp .flex-item .item-price{
  position: absolute;
  right: 5px;
  bottom: 0.6rem;
  background:rgba(255,233,107,0.7);
  padding:1px 5px 2px 10px;
  border-top-left-radius: 50px;
  border-bottom-left-radius: 50px;
  font-weight: bold;
  color: #ff0776;
}